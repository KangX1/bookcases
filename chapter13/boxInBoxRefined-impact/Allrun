#!/bin/bash
cd ${0%/*} || exit 1    # run from this directory

if [[ "$1" == --parallel ]]
then
  parallel_run=true
  shift # remove the option from $@
  echo 'is a parallel run'
else
  parallel_run=false
  echo 'is a seriell run'
fi

