echo running blockMesh
blockMesh > blockMesh.log 2>&1
echo running topoSet
topoSet > topoSet.log 2>&1
echo running subsetMesh
subsetMesh -overwrite c0 -patch HULL > subsetMesh.log 2>&1
./setWaterLevel

